<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
    >
	
	<ui:style>
		.important {
			font-weight: bold;
		}
		.logoStyle {
			padding: 0px 15px; 
		}
		.logoStyle a {
			color: white;
			font-size: 18px;
			text-decoration: none;
			background-image: none;	
		} 
		.logoStyle a:hover {
			color: white;
			text-decoration: none;
			font-size: 18px;
			background-image: none;	
		}

	</ui:style>
	
	<g:HTMLPanel>
		<b:Navbar>
		  <b:NavbarHeader>
		    <b:NavbarBrand styleName="{style.logoStyle}"> 
  		        <a href="#"><img width="50px" src="images/checkerlogo.png"/>Checkerboard Health</a>
		    </b:NavbarBrand>
		    <b:NavbarCollapseButton dataTarget="#navbar-collapse"/>
		  </b:NavbarHeader>
		
		  <b:NavbarCollapse b:id="navbar-collapse">
		    <b:NavbarNav pull="RIGHT">
		      <b:AnchorListItem ui:field='ancJoin'>Join Now!</b:AnchorListItem>
		      <b:AnchorListItem ui:field='ancLogin'>Log In</b:AnchorListItem>
		    </b:NavbarNav>
		    <b:NavbarText pull="RIGHT">
		    </b:NavbarText>
		  </b:NavbarCollapse>
		</b:Navbar>
	</g:HTMLPanel>
</ui:UiBinder> 